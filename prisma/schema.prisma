// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid())
  fullName String
  email String @unique
  hash String
  salt String
  status UserStatus @default(ACTIVE)
  departments Department[]
}
model Department{
  id String @id @default(uuid())
  name String
  description String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  creator User @relation(fields: [creatorId],references: [id])
  creatorId String
  relationsAsAChild DepartmentRelation[] @relation("relationsAsAChild")
  relationsAsAParent DepartmentRelation[] @relation("relationsAsAParent")
}

model DepartmentRelation{
  child Department @relation("relationsAsAChild",fields: [childId],references: [id])
  parent Department @relation("relationsAsAParent",fields: [parentId], references: [id])
  parentId String
  childId String
  @@id([parentId, childId])
}

enum UserStatus{
  ACTIVE
  INACTIVE
  SUSPENDED
}

